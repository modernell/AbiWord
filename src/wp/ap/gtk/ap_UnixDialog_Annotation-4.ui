<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  <object class="GtkDialog" id="ap_UnixDialog_Annotation">
    <property name="border-width">5</property>
    <property name="title" translatable="yes">Edit Annotation</property>
    <property name="modal">1</property>
    <property name="window-position">center-on-parent</property>
    <property name="type-hint">dialog</property>
    <child internal-child="content_area">
      <object class="GtkBox" id="vbDialog">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkGrid" id="grGeneral">
            <property name="vexpand">1</property>
            <property name="border-width">5</property>
            <property name="row-spacing">6</property>
            <property name="column-spacing">12</property>
            <child>
              <object class="GtkLabel" id="lbTitle">
                <property name="label" translatable="yes">Subject:</property>
                <property name="xalign">0</property>
                <layout>
                  <property name="left-attach">0</property>
                  <property name="top-attach">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="enTitle">
                <property name="can-focus">1</property>
                <property name="has-focus">1</property>
                <layout>
                  <property name="left-attach">1</property>
                  <property name="top-attach">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="lbAuthor">
                <property name="label" translatable="yes">Author:</property>
                <property name="xalign">0</property>
                <layout>
                  <property name="left-attach">0</property>
                  <property name="top-attach">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="enAuthor">
                <property name="can-focus">1</property>
                <layout>
                  <property name="left-attach">1</property>
                  <property name="top-attach">1</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkScrolledWindow" id="swDescription">
                <property name="can-focus">1</property>
                <property name="hexpand">1</property>
                <property name="vexpand">1</property>
                <property name="shadow-type">in</property>
                <child>
                  <object class="GtkTextView" id="tvDescription">
                    <property name="can-focus">1</property>
                    <property name="wrap-mode">word</property>
                  </object>
                </child>
                <layout>
                  <property name="left-attach">1</property>
                  <property name="top-attach">2</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="lbDescription">
                <property name="valign">start</property>
                <property name="label" translatable="yes">Description:</property>
                <property name="xalign">0</property>
                <property name="yalign">0</property>
                <layout>
                  <property name="left-attach">0</property>
                  <property name="top-attach">2</property>
                </layout>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <action-widgets>
      <action-widget response="-6">btCancel</action-widget>
      <action-widget response="-5">btOK</action-widget>
      <action-widget response="-10">btReplace</action-widget>
    </action-widgets>
    <child internal-child="action_area">
      <object class="GtkButtonBox" id="aaDialog">
        <property name="visible">1</property>
        <property name="layout-style">end</property>
        <child>
          <object class="GtkButton" id="btCancel">
            <property name="label">gtk-cancel</property>
            <property name="can-focus">1</property>
            <property name="can-default">1</property>
            <property name="use-stock">1</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="btOK">
            <property name="label">gtk-ok</property>
            <property name="can-focus">1</property>
            <property name="can-default">1</property>
            <property name="has-default">1</property>
            <property name="tooltip-text" translatable="yes">Update the annotation</property>
            <property name="use-stock">1</property>
          </object>
          <packing>
            <property name="position">1</property>
          </packing>
        </child>
        <child>
          <object class="GtkButton" id="btReplace">
            <property name="can-focus">1</property>
            <property name="can-default">1</property>
            <property name="tooltip-text" translatable="yes">Replace selection with annotation</property>
            <child>
              <object class="GtkAlignment" id="alignment1">
                <property name="visible">1</property>
                <property name="xscale">0</property>
                <property name="yscale">0</property>
                <child>
                  <object class="GtkBox" id="hbox1">
                    <property name="spacing">2</property>
                    <child>
                      <object class="GtkImage" id="image1">
                        <property name="stock">gtk-convert</property>
                      </object>
                      <packing>
                        <property name="fill">0</property>
                      </packing>
                    </child>
                    <child>
                      <object class="GtkLabel" id="label1">
                        <property name="label" translatable="yes">Replace</property>
                        <property name="use-underline">1</property>
                      </object>
                      <packing>
                        <property name="fill">0</property>
                      </packing>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
          <packing>
            <property name="position">2</property>
          </packing>
        </child>
      </object>
    </child>
  </object>
</interface>
